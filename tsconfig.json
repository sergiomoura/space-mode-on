    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src"]
}